root = true

[*]
insert_final_newline    = true
indent_style            = space
indent_size             = 4
max_line_length         = 100

# Handled by shfmt(1).
# Ideally these would be hidden behind a [[shell]] block or something; that's a work-in-progress:
# <https://github.com/mvdan/sh/issues/664>
binary_next_line        = true
switch_case_indent      = true
keep_padding            = true
