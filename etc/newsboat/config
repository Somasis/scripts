cache-file ~/var/cache/newsboat/cache.db

# navigation settings
mark-as-read-on-hover yes       # moving down list marks articles as read

# download/synchronization settings
download-full-page yes          # download link's contents when no summary is given
prepopulate-query-feeds yes     # without this query feeds are empty by default
reload-threads 4
refresh-on-startup yes

# article display settings
html-renderer "~/lib/aerc/filters/html"
show-keymap-hint no
text-width 100

# color scheme
color listfocus white blue bold
color listnormal_unread green black bold
color listfocus_unread black green bold
color info white magenta bold

# appearance settings
datetime-format     "%b %d"                         # march 19
feedlist-format     "%4i │ %t %> %?n?%u unread?"    # index │ title | feed title (aligned right)
articlelist-format  "%4i │ %-12d │ %t%> %?a?%a?"    # index | date | title | author (aligned right)

feedlist-title-format       "all feeds %?t? - tag `%t'&?%> %u unread, %t total"
articlelist-title-format    "%t%> %u unread, %t total"
searchresult-title-format   "search result %> %u unread, %t total"
filebrowser-title-format    "%?o?open file&save file? - %f"
dirbrowser-title-format     "%?o?open directory&save file? - %f"
help-title-format           "help"
selecttag-title-format      "select tag"
selectfilter-title-format   "select filter"
itemview-title-format       "%t %> %f - %u unread, %t total"
urlview-title-format        "urls"
dialogs-title-format        "dialogs"

# killfile
ignore-mode "display"
ignore-article "*" "author = \"somasis\" and tags # \"osm\""
