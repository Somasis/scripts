#!/usr/bin/env perl

use strict;
use warnings;

use File::Basename;
use Getopt::Std;

sub HELP_MESSAGE {
    print STDERR "usage: ", (fileparse($0))[0], " [-!0M] TYPE FILES...\n";
    exit 69;
}

sub VERSION_MESSAGE { HELP_MESSAGE; }

my %opt;
getopts('!0M', \%opt) && scalar @ARGV >= 2 or HELP_MESSAGE;

if ($opt{'M'}) {
    print STDERR "using magic\n";
    use File::MimeInfo::Magic ();
} else {
    print STDERR "using extensions\n";
    use File::MimeInfo ();
}

my $types       = File::MimeInfo->new;
my $filter      = $ARGV[0];
my $filter_type = 0;                  # 0: parent/child, 1: parent

if ($filter =~ /^[^\/]+\/\*$/) {
    $filter_type = 1;
    $filter =~ s#/\*$##;
} else {
    if (not $filter = $types->mimetype_canon($filter)) { HELP_MESSAGE; }
}

shift @ARGV;

my $filetype;
my $match;

$\ = "\n";
$\ = "\0" if $opt{'0'};

foreach my $file (@ARGV) {
    if (not -e $file) {
        print STDERR "error: file '$file' does not exist\n";
        exit 2;
    }

    if (not $filetype = $types->mimetype($file)) {
        warn "warning: couldn't get type for '$file', so it won't be printed\n";
        next;
    }

    $filetype =~ s#/.*## if $filter_type == 1;

    if ($filter eq $filetype) {
        print "$file" unless $opt{'!'};
    } else {
        print "$file" if $opt{'!'};
    }
}
