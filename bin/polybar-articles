#!/bin/sh

set -eu

newsboat() {
    LANG=C command newsboat "$@"
}

unread() {
    pgrep newsboat && printf '\n' && return
    unread=$(newsboat -x print-unread 2>/dev/null | cut -d' ' -f1)
    case "${unread}" in
        0)
            printf '\n'
            ;;
        Error:*)
            :
            ;;
        *)
            printf 'ï‚ž\n'
            ;;
    esac
}

unread; sleep 1
while rwc -e "${XDG_CACHE_HOME:-~/.cache}"/newsboat/cache.db >/dev/null; do
    unread; sleep 1
done

