#!/bin/sh
# mess - manage a mess(7) directory structure
# Ported from the original Ruby written by Leah Neukirchen.
#
# See concept here:
#   https://leahneukirchen.org/blog/archive/2006/01/keeping-your-home-clean-with-mess.html

usage() {
    printf 'usage: %s [-s]\n' "${0##*/}" >&2
    exit 1
}

print_sh() {
    cat <<'EOF'
mess() {
    if [ $# -eq 0 ]; then
        cd "$(command mess)" && return
    else
        command mess "$@"
    fi
}
EOF
    exit 0
}

MESSDIR=${MESSDIR:-~/mess}

while getopts :s arg >/dev/null 2>&1; do
    case "${arg}" in
        s)
            print_sh
            ;;
        ?)
            printf "unknown argument -- %s\n" "${OPTARG}"
            usage
            ;;
    esac
done

# Avoid weeks 00 and 53 in the week number, make it more like natural language.
week=$(date +%W)
case "${week}" in 00) week=01 ;; 53) week=52 ;; esac

current=$(date +%Y/"${week}")
current_link="${MESSDIR}/current"
current_link_resolved=$(readlink -f "${current_link}")

if ! [ -d "${MESSDIR}/${current}" ]; then
    mkdir -p "${MESSDIR}/${current}"
    printf "Created messdir '%s'.\n" "${current}" >&2
fi

[ "${MESSDIR}/${current}" = "${current_link_resolved}" ] || ln -fns "${current}" "${current_link}"
printf '%s\n' "${current_link}"
