# kak: filetype=sh

#!
pp .config/catgirl/catgirl.in

printf 'host = %s\n' "${1}"
printf 'port = %s\n' "$(pass ${USER}/${1}/pounce/${2} | sed -E '/^port: /!d; s/^port: //')"

# `user` is used to disambiguate clients.
printf 'user = %s\n' "${USER}_$(hostname | tr '\.' '_')"

printf 'nick = %s\n' "${2%%@*}"
printf 'pass = %s\n' "$(pass ${USER}/${1}/pounce/${2} | head -n1)"
printf 'save = %s\n' "${2}"
#!

